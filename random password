char randomchar(int cha,int cha2=26){
char ch =  cha + rand() % cha2;
return ch;
}
char randomrrr(){
    char ww[13]={"!@#$%&*()_/^"};
    return  ww[rand()%12];
}
int randcontrol(){
srand(time(0));int z=rand()%10000000;return z;
}
void swap(int &nu,int &un){
    int w=nu;
    nu=un;
    un=w;
}
